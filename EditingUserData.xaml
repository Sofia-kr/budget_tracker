<Window x:Class="budget_tracker.EditingUserData"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:budget_tracker"
        mc:Ignorable="d"
        Title="EditingUserData" Height="1080" Width="1920">
    <Grid>
        <Label Content="Ім'я:" HorizontalAlignment="Left" Margin="52,67,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Margin="52,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Height="30" FontSize="16"/>
        
        <Label Content="Електронна пошта:" HorizontalAlignment="Left" Margin="52,181,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="EmailTextBox" HorizontalAlignment="Left" Margin="52,223,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" FontSize="16" Height="30"/>
        
        <Label Content="Пароль:" HorizontalAlignment="Left" Margin="52,308,0,0" VerticalAlignment="Top" FontSize="20"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Left" Margin="52,350,0,0" VerticalAlignment="Top" Width="300" FontSize="16" Height="30"/>

        <Button x:Name="SaveDataButton" Content="Зберегти зміни" HorizontalAlignment="Left" Margin="52,483,0,0" VerticalAlignment="Top" Width="180" Height="40" FontSize="16" Click="SaveDataButton_Click"/>
        <Button x:Name="CancelButton" Content="Скасувати" HorizontalAlignment="Left" Margin="285,483,0,0" VerticalAlignment="Top" Width="180" Height="40" FontSize="16" Click="CancelButton_Click"/>

        <Button x:Name="ReturnButton" Width="50" Height="50" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="ReturnButton_Click">
            <Image Source="arrow.jpg" Stretch="Uniform"/>
        </Button>
    </Grid>
</Window>
