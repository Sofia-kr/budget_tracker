<Window x:Class="budget_tracker.Expenses"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:budget_tracker"
        mc:Ignorable="d"
       Title="Витрати" Height="835" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Button x:Name="ReturnExpenses" Content="←" 
                    FontSize="24" Width="50" Height="50" 
                    Background="#FFEAD2" BorderBrush="Gray"
                    Click="ReturnExpenses_Click"/>
            <TextBlock Text="ВИТРАТИ" FontSize="36" FontWeight="Bold" 
                       VerticalAlignment="Center" Margin="20,0,0,0"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,30,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="50">

                <TextBlock Text="Оберіть тип:" FontSize="20"/>
                <ComboBox x:Name="ChoiceType" Width="250" Height="35" Margin="0,10,0,20">
                    <ComboBoxItem Content="Expenses"/>
                    <ComboBoxItem Content="Income"/>
                    <ComboBoxItem Content="Savings"/>
                </ComboBox>

                <!-- Загальний баланс -->
                <TextBlock Text="Загальний баланс:" FontSize="20"/>
                <TextBox x:Name="GeneralBalance" Width="250" Height="35" 
                         IsReadOnly="True" Text="0.00" Margin="0,10,0,20"/>

                <!-- 2.3 Додати категорію -->
                <Button x:Name="AddCategoryExpenses" Content="Додати категорію витрат"
                        Width="250" Height="40" Margin="0,10,0,20"
                        Click="AddCategoryExpenses_Click"/>

                <!-- Введення суми -->
                <TextBlock Text="Введіть суму:" FontSize="20"/>
                <TextBox x:Name="AmountExpenses" Width="250" Height="35" Margin="0,10,0,20"/>

                <!-- Коментар -->
                <TextBlock Text="Додати коментар:" FontSize="20"/>
                <TextBox x:Name="CommentExpenses" Width="250" Height="35" 
                         MaxLength="25" Margin="0,10,0,20"/>

                <!--Календар -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,20">
                    <TextBlock Text="Календар:" FontSize="20" VerticalAlignment="Center"/>
                    <DatePicker x:Name="DateExpenses" Width="200" Margin="20,0,0,0"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                    <StackPanel.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Margin" Value="0,0,10,0"/>
                        </Style>
                    </StackPanel.Resources>
                    <Button x:Name="SaveExpenses" Content="Записати" Width="120" Height="40" Click="SaveExpenses_Click"/>
                    <Button x:Name="CancelExpenses" Content="Скасувати" Width="120" Height="40" Click="CancelExpenses_Click"/>
                </StackPanel>
            </StackPanel>

            <!-- Права частина (категорії) -->
            <StackPanel Grid.Column="1" Margin="50">
                <TextBlock Text="Категорії:" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
                <UniformGrid Columns="3" Rows="2" Margin="0,0,0,20">
                    <Button Content="Health" Height="100" Margin="10" Click="Category_Click"/>
                    <Button Content="Registration" Height="100" Margin="10" Click="Category_Click"/>
                    <Button Content="Products" Height="100" Margin="10" Click="Category_Click"/>
                    <Button Content="Transportation" Height="100" Margin="10" Click="Category_Click"/>
                    <Button Content="Leisure" Height="100" Margin="10" Click="Category_Click"/>
                </UniformGrid>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
