<UserControl x:Class="SavingsApp.Saving"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid Background="#F5F5F5">

        <!-- Choice Type CheckBoxes -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0">
            <CheckBox x:Name="ExpensesCheckBox" Content="Expenses" FontSize="16" Margin="15,0"/>
            <CheckBox x:Name="IncomeCheckBox" Content="Income" FontSize="16" Margin="15,0"/>
            <CheckBox x:Name="SavingsCheckBox" Content="Savings" FontSize="16" Margin="15,0" IsChecked="True"/>
        </StackPanel>

        <!-- General Balance Display -->
        <Border Background="White" BorderBrush="#DDD" BorderThickness="1" 
                HorizontalAlignment="Center" VerticalAlignment="Top" 
                Margin="0,120,0,0" Padding="20,15" CornerRadius="8">
            <TextBlock x:Name="GeneralBalanceText" Text="General Balance: $0.00" 
                       FontSize="28" FontWeight="Bold" Foreground="#2E7D32"/>
        </Border>

        <!-- Savings Form Content -->
        <Border Background="White" BorderBrush="#DDD" BorderThickness="1" 
                HorizontalAlignment="Center" VerticalAlignment="Center" 
                Width="600" Height="400" CornerRadius="12">
            <Grid Margin="40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0" Text="Savings" FontSize="36" FontWeight="Bold" 
                          Foreground="#333" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <!-- Amount Input -->
                <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <TextBlock Text="Enter Saving Amount:" FontSize="18" Foreground="#666" 
                              Margin="0,0,0,10" HorizontalAlignment="Center"/>
                    <TextBox x:Name="AmountSavingTextBox" Width="250" Height="40" FontSize="18"
                            TextAlignment="Center" BorderThickness="2" BorderBrush="#2196F3"
                            Padding="10,5" PreviewTextInput="AmountSavingTextBox_PreviewTextInput"
                            ToolTip="Enter positive numbers only (e.g., 6.50 or 6,50)"/>
                </StackPanel>

                <!-- Error Message -->
                <TextBlock x:Name="SavingErrorText" Grid.Row="2" Text="" Foreground="Red" 
                          HorizontalAlignment="Center" FontSize="14" Margin="0,0,0,20"
                          TextAlignment="Center" Visibility="Collapsed"/>

                <!-- Save Button -->
                <Button Grid.Row="3" x:Name="SaveSavingButton" Content="Save Saving" 
                       Width="200" Height="45" FontSize="18" FontWeight="SemiBold"
                       Background="#4CAF50" Foreground="White" BorderThickness="0"
                       CornerRadius="8" Margin="0,0,0,15" Click="SaveSavingButton_Click"
                       Cursor="Hand">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                    </Button.Effect>
                </Button>

                <!-- Cancel Button -->
                <Button Grid.Row="4" x:Name="CancelSavingButton" Content="Cancel" 
                       Width="120" Height="35" FontSize="14"
                       Background="#F44336" Foreground="White" BorderThickness="0"
                       CornerRadius="6" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                       Margin="0,0,0,10" Click="CancelSavingButton_Click" Cursor="Hand"/>

                <!-- Return Arrow Button -->
                <Button Grid.Row="5" x:Name="ReturnsSavingButton" Width="50" Height="50" 
                       HorizontalAlignment="Left" VerticalAlignment="Bottom"
                       Background="Transparent" BorderThickness="0" 
                       Click="ReturnsSavingButton_Click" Cursor="Hand">
                    <Viewbox>
                        <Canvas Width="24" Height="24">
                            <Path Data="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z" 
                                  Fill="#666"/>
                        </Canvas>
                    </Viewbox>
                </Button>
            </Grid>
        </Border>

    </Grid>
</UserControl>